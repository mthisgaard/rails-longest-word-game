<div class="container mt-4">
  <h1>New game</h1>
  <div class="mt-3 mb-3">
    <% @letters.each do |letter| %>
      <%=letter%>
    <%end%>
  </div>
  <div>
    <form action="/score" method="post" data-turbo="false">
      <label for="word">What is the longest word you can find?</label>
      <div class="d-flex mt-2">
        <input class="form-control" id="word" type="text" name="word">
        <input class="btn btn-primary" type="submit" value="Play!">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>
