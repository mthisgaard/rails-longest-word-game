<div class="container mt-4">
  <h1>New game</h1>
  <div class="letter-container">
    <% @letters.each do |letter| %>
      <div class="letter">
        <%=letter.upcase%>
      </div>
    <%end%>
  </div>
  <div>
    <form action="/score" method="post" data-turbo="false">
      <label for="word">What is the longest word you can find?</label>
      <div class="d-flex mt-2">
        <input class="form-control" id="word" type="text" name="word">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <input class="btn btn-primary" type="submit" value="Play!">
      </div>
    </form>
  </div>
</div>
